<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo</title>
<script>
const markTodo = (id) => {
        
          fetch(`/todos/${id}/markasCompleted`, {
            method: "PUT",
            headers: {
            "Content-Type": "application/json",
            },
           
          })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
         
        };
           

        const deleteTodo = (id)=>{
            fetch(`/todos/${id}`,{
                method :"delete",
                headers : {
                    "Content-Type": "application/json",
                }
            }).then(res=>{
                if(res.ok){
                    window.location.reload();
                }
            })
        }
</script>

    <link rel="stylesheet" href="./css/styles.css" />
